.product-wrap {
  width: 100%;
  height: 100vh;
  display: block;
  overflow-y: scroll;
  background-color: rgb(235, 243, 243);
}

.footer-wrap {
  width: 100%;
  height: 70px;
  background-color: #fff;
  position: absolute;
  bottom: 0px;
  left: 0px;
}

.footer-button {
  width: 95%;
  height: 40px;
  display: block;
  margin: 15px 2.5%;
  text-align: center;
  line-height: 40px;
  font-size: 18px;
  font-weight: bold;
  border-radius: 30px;
  background-color: rgb(255, 231, 92);
}

.product-price {
  width: 100%;
  height: 60px;
  display: block;
  color: #fff;
  background-color: rgb(113, 123, 216);
  border-radius: 15px 15px 0px 0px;
}

.price-tiny {
  width: 100%;
  height: 10px;
  display: block;
  height: 20px;
  line-height: 30px;
  color: rgb(182, 182, 182);
  font-size: 12px;
}

.price-tiny-left {
  width: 30%;
  height: 100%;
  float: left;
  margin-left: 5%;
  text-decoration: line-through;
}

.price-tiny-right {
  width: 65%;
  height: 100%;
  float: left;
  text-decoration: line-through;
}

.price-now {
  width: 100%;
  height: 40px;
  display: block;
  height: 40px;
  line-height: 40px;
  color: rgb(255, 255, 255);
  font-weight: bold;
  font-size: 14px;
}

.price-tiny-left1 {
  width: 30%;
  height: 100%;
  float: left;
  margin-left: 5%;
}

.price-tiny-center1 {
  width: 45%;
  height: 100%;
  float: left;
}

.price-tiny-right1 {
  width: 20%;
  height: 100%;
  float: left;
}

.price-dsc {
  width: 60px;
  color: rgb(113, 123, 216);
  height: 30px;
  line-height: 30px;
  text-align: center;
  border-radius: 5px;
  background-color: #fff;
}

.product-card {
  width: 95%;
  height: 100px;
  display: block;
  background-color: #fff;
  margin-left: 2.5%;
  border-radius: 10px;
  margin-top: 10px;
}

.title-big {
  font-size: 18px;
  font-weight: bold;
  width: 97.5%;
  height: 50px;
  line-height: 50px;
  margin-left: 2.5%;
}

.title-bap {
  width: 95%;
  font-size: 13px;
  color: #aaa;
  height: 60px;
  line-height: 60px;
  margin: 0px 2.5%;
}

.iconClass {
  width: 15px;
  height: 15px;
  display: inline-block;
  margin-top: 23px;
  float: left;
  margin-right: 3px;
}


.product-info {
  width: 100%;
  padding-bottom: 20px;
  background-color: #fff;
  margin-top: 20px;
  border-radius: 10px;
}

.product-info-title {
  width: 97%;
  height: 50px;
  line-height: 50px;
  margin-left: 3%;
  font-weight: bold;
}

.product-table {
  width: 94%;
  margin-left: 3%;
}

.product-table-row {
  width: 100%;
  height: 30px;
  color: #aaa;
  line-height: 30px;
  border-top: 1px solid rgb(216, 216, 216);
}

.product-table-row2 {
  width: 100%;
  height: 30px;
  color: #aaa;
  line-height: 30px;
  text-align: left;
  border-top: 1px solid rgb(216, 216, 216);
}

.product-table-row-left {
  width: calc(30% - 21px);
  height: 100%;
  padding-left: 20px;
  float: left;
}

.product-table-row-right {
  width: 70%;
  height: 100%;
  float: left;
  text-align: center;
}

.white-space {
  width: 100%;
  height: 80px;
  display: block;
}

.bigImg {
  width: 100%;
  display: block;
  height: 25vh;
}

.bigImg image {
  width: 70%;
  margin-left: 15%;
  height: 100%;
}

.block {
  width: 100vw;
  height: 240px;
  background: var(--td-bg-color-container);
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.header {
  display: flex;
  align-items: center;
  height: 116rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
  color: var(--td-text-color-primary);
}

.btn {
  font-size: 32rpx;
  padding: 32rpx;
}

.btn--cancel {
  color: var(--td-text-color-secondary);
}

.btn--confirm {
  color: #0052d9;
}