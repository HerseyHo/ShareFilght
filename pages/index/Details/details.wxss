.details-wrap {
  width: 100%;
  height: 100vh;
  display: block;
  background-color: rgb(231, 237, 238);
}

.select-group {
  width: 100%;
  height: 50px;
  background-color: #fff;
  display: block;
}

.device-list-wrap {
  width: 100%;
  height: calc(100vh - 150px);
  overflow-y: scroll;
  display: block;
}

.device-item {
  width: 90%;
  height: 80px;
  border-radius: 10px;
  display: block;
  margin: 20px 5%;
  background-color: #fff;
}

.device-img {
  width: 60px;
  height: 60px;
  margin: 10px;
  float: left;
  display: block;
}

.device-info {
  width: calc(100% - 80px);
  height: 80px;
  display: block;
  padding-top: 7px;
  overflow: hidden;
}

.scene-item {
  width: 28%;
  height: 30px;
  margin-left: 2%;
  margin-right: 2%;
  display: block;
  border: 1px solid rgb(141, 141, 141);
  border-radius: 10px;
  float: left;
  margin-top: 0px;
  margin-bottom: 15px;
  text-align: center;
  line-height: 30px;
}

.custom-tabs {
  margin-bottom: 32rpx;
}

.custom-panel {
  height: 120px;
  color: var(--td-text-color-primary);
}

.box-main {
  width: 95%;
  margin: 0 2.5%;
  display: block;
  clear: both;
  overflow: hidden;
  padding-top: 10px;
}

.check-box {
  width: 29%;
  height: 8vh;
  float: left;
  margin: 1% 2% 1% 2%;
  border-radius: 10px;
  display: block;
  background-color: rgb(60, 64, 90);
}

.check-box image {
  width: 100%;
  border-radius: 10px;
  height: 100%;
}

.check-box text {
  font-size: 13px;
  line-height: 22vh;
  display: block;
  text-align: left;
  padding-left: 5px;
  color: #fff;
  margin-top: -95%;
  z-index: 1;
}
.device-info-item1{
  width: 53%;
  float: left;
  display: block;
  height: 100%;
}
.device-info-name{
  font-weight: bold;
  font-size: 14px;
}
.device-info-item2{
  width: 40%;
  text-align: right;
  float: right;
  display: block;
  margin-right: 5%;
  height: 100%;
}
.device-info-txt1{
  line-height: 20px;
  height: 30px;
  font-weight: bold;
  font-size: 16px;
}
.device-info-txt2{
  line-height: 20px;
  height: 30px;
  font-weight: bold;
  font-size: 14px;
}
