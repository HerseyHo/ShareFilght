      </view>
      <view class="part-item">
        <view class="part-item-img">
          <image src="../assets/Icons/baoxiu.png"></image>
        </view>
        <view class="part-item-name">报修</view>
      </view>
      <view class="part-item">
        <view class="part-item-img">
          <image src="../assets/Icons/yinsi.png"></image>
        </view>
        <view class="part-item-name">隐私管理</view>
      </view>
    </view>
  </view>
  <!-- 客服图标 -->
  <view class="center-service">
    <image src="../assets/Icons/service_icon.png"></image>
    <view class="kefu">咨询客服</view>
