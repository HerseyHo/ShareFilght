    <view class="center-avator">
      <t-avatar class="avatar-example--large" icon="user" size="large" />
    </view>
    <view class="avator-right">
      <view class="personal-name">微信用户</view>
      <view class="personal-phone">15011113333</view>
    </view>
  </view>
  <view class="center-order-wrap">
    <view class="order-title">我的合同<view class="order-title-more">全部 ></view>
    </view>
    <view class="order-type">
      <view class="order-item">
