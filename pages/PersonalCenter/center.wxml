  <view class="center-part-wrap">
    <view class="order-title">常用功能</view>
    <view class="part-type">
      <view class="part-item">
        <view class="part-item-img">
          <image src="../assets/Icons/jiesuandan.png"></image>
        </view>
        <view class="part-item-name">结算单</view>
      </view>
      <view class="part-item">
        <view class="part-item-img">
          <image src="../assets/Icons/zhifu.png"></image>
